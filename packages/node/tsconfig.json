{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node16",
    "module": "Node16",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "incremental": true,
    "tsPlusConfig": "./tsplus.config.json",
    "paths": {
      "@effect-http/node": ["./src/index.js"],
      "@effect-http/node/*": ["./src/*.js"]
    },
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo"
  },
  "include": ["src/**/*"]
}
